{
  "manifest_version": 3,
  "name": "Proxyverse",
  "version": "<IN_PACKAGE_JSON>",
  "version_name": "<IN_PACKAGE_JSON>",
  "description": "__MSG_app_desc__",
  "default_locale": "en",
  "icons": {
    "128": "mini-logo.png"
  },

  "action": {
    "default_popup": "index.html#/popup"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "proxy",
    "webRequest",
    "webRequestAuthProvider"
  ]
}